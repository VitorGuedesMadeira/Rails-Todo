<div class="todo-container">
  <%= form_with model: todo do |form| %>
    <%= form.check_box :completed, onchange: "this.form.submit()" %>
  <% end %>

  <%= turbo_frame_tag "edit_#{todo.id}" do %>
    <%= link_to todo.description, edit_todo_path(todo) %>
  <% end %>


  <%= button_to image_tag("icons/trash.png"), todo_path(todo), method: :delete, class: "trash-icon" %>
</div>
